{{>layouts/header}}
<h2>수정하기</h2>
{{#member}}
<form class="container" action="/members/update" method="post">
    <input name="id" type="hidden" value={{id}}>
    <div class="mb-3">
        <label class="form-label">닉네임</label>
        <input type="text" class="form-control" name="nickname" value={{nickname}}>
    </div>
    <div class="mb-3">
        <label class="form-label">이메일</label>
        <input type="email" class="form-control" name="email", value={{email}}>
    </div>
    <div class="mb-3">
        <label class="form-label">비밀번호</label>
        <input type="password" class="form-control" name="pswd" value={{pswd}}>
    </div>
    <button type="submit" class="btn btn-primary">수정완료</button>
    <a href="/members/{{id}}" class="btn btn-sm btn-outline-success">뒤로</a>

</form>
{{/member}}
{{>layouts/footer}}