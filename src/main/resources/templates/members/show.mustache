{{>layouts/header}}
<h1>Members</h1>
<h2>상세페이지</h2>
<table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Nickname</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <tbody>
      {{#member}} {{!모델에 등록한 member Entity 출력}}
      <tr>
        <th>{{id}}</th>
        <td>{{nickname}}</td>
        <td>{{email}}</td>
      </tr>
      {{/member}}
    </tbody>
  </table>
  <a href="/members/{{id}}/edit" class="btn btn-primary">수정하기</a>
  <a href="/members/{{id}}/delete" class="btn btn-danger">삭제하기</a>
  <a href="/members" class="btn btn-success">Go to member list</a>
{{>layouts/footer}}